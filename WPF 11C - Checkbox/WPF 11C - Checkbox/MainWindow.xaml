<Window x:Class="WPF_11C___Checkbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_11C___Checkbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Pizza Toppings</Label>
        <CheckBox Name="cbAllToppings" IsThreeState="True" Checked="cbAllToppings_Checked" Unchecked="cbAllToppings_Checked">Add All</CheckBox>

        <StackPanel Margin="10">
            <CheckBox Name="cbSalami" Checked="cbSingle_Checked" Unchecked="cbSingle_Checked">
                <TextBlock>Salami <Run Foreground="red" FontWeight="bold">Spicy</Run>
                </TextBlock>
            </CheckBox>

            <CheckBox Name="cbMushrooms" Checked="cbSingle_Checked" Unchecked="cbSingle_Checked">Mushrooms</CheckBox>
            <CheckBox Name="cbMozz" Checked="cbSingle_Checked" Unchecked="cbSingle_Checked">Mozzarellaa</CheckBox>
            

        </StackPanel>
        
    </StackPanel>
</Window>
